<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/style.css">

    <title>MOVIEMAGIC</title>
</head>

<body>
    <!-- <% console.log(details) %> -->

    <%- include('../includes/header.ejs') %>
    <section class="movie-details">

        <div class="movie-details-image"
            style="background: url('https://image.tmdb.org/t/p/w1280<%= details.backdrop_path %>') top/cover no-repeat;">
        </div>

        <div class="movie-details-voting">
            <div class="movie-details-voting-container">
                <img src="/assets/img/star.svg" alt="">
                <p>
                    <%= details.vote_average %>/<span>10</span>
                </p>
                <p><%= details.vote_count.toLocaleString() %></p>
            </div>
        </div>

        <div class="movie-details-details">

            <h1><%= details.title %></h1>
            <p><%= details.release_date %> <span><%= details.status %></span> </p>

            <div>
                <% details.genres.forEach(genre => { %>
                <a class="genre-button" href="/genres/<%= genre.id %>"><%= genre.name %></a>
                <% }) %>
            </div>

            <h3>Plot Summary</h3>
            <p><%= details.overview %> </details>
            </p>
        </div>

    </section>

    <script src="/assets/js/main.js"></script>
</body>

</html>